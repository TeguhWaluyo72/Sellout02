<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- res.partner.categorylevel1 tree view -->
        <record id="link_customer_view_tree" model="ir.ui.view">
        <field name="name">Link customer</field>
        <field name="model">sellout.link.customer</field>
        <field name="arch" type="xml">
            <list string="Link customer">
                <field name="company_id" optional="show" groups="base.group_multi_company"/>
                <field name="code"/>
                <field name="name"/>
                <field name="alamat"/>
                <field name="kelom_cust"/>
                <field name="kode_wilay"/>
                <field name="nama_wilay"/>
                <field name="customer_id"/>                            
            </list>
        </field>
        </record>

        <!-- Membuat View Form Course -->
        <!-- res.partner.categorylevel1 form view -->
        <record id="link_customer_view_form" model="ir.ui.view">
        <field name="name">Link customer</field>
        <field name="model">sellout.link.customer</field>
        <field name="arch" type="xml">
                <form string="Category Level">
                    <sheet>
                        <group>
                            <field name="company_id"/>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="alamat"/>
                            <field name="kelom_cust"/>
                            <field name="kode_wilay"/>
                            <field name="nama_wilay"/>
                            <field name="customer_id"/>                            
                        </group>
                    </sheet>
                </form>
        </field>
        </record>

        <!-- model.name search view -->
        <record id="sellout_link_customer_view_search" model="ir.ui.view">
            <field name="name">sellout.link.customer.view.search</field>
            <field name="model">sellout.link.customer</field>
            <field name="arch" type="xml">
                <search string="Search Link customer">
                    <field name="name" string="Name" 
                        filter_domain = "['|', ('code','ilike',self),('name','ilike',self)]" />
                    <filter name="EmptyLink" string="Empyt Link" domain="[('customer_id','=',0)]" />
<!--                <group expand="0" string="Group by">
                        <field string="Company"  name="Company"  domain="[]" context="{'group_by': 'company_id'}" />
                        <field string="Barang"   name="Barang"   domain="[]" context="{'group_by': 'barang_id'}"  />                        
                    </group>
-->      
                </search>
            </field>
        </record>        

        <!-- res.partner.categorylevel1 action window -->
        <record id="link_customer_action" model="ir.actions.act_window">
        <field name="name">Link customer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sellout.link.customer</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
            Link customer
            </p>
        </field>
        </record>




    </data>
</odoo>