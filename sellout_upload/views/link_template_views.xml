<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- res.partner.categorylevel1 tree view -->
        <record id="link_template_view_tree" model="ir.ui.view">
        <field name="name">Link template</field>
        <field name="model">sellout.link.template</field>
        <field name="arch" type="xml">
            <list string="Link Template">
                <field name="name"/>
            </list>
        </field>
        </record>

        <!-- Membuat View Form Course -->
        <!-- res.partner.categorylevel1 form view -->
        <record id="link_template_view_form" model="ir.ui.view">
        <field name="name">Link Template</field>
        <field name="model">sellout.link.template</field>
        <field name="arch" type="xml">
                <form string="Category Level">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
        </field>
        </record>

        <!-- res.partner.categorylevel1 action window -->
        <record id="link_template_action" model="ir.actions.act_window">
        <field name="name">Link Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">link.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
            Link Template
            </p>
        </field>
        </record>




    </data>
</odoo>